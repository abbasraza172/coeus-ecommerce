<div class="card" style="width: 100%; margin: auto;">
    <div class="card-header">
      <h1>Products</h1>
    </div>
    

    <div class="col-md-12">

        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Product Id</th>
                        <th>Product Name</th>
                        <th>Product Description</th>
                        <th>Categories</th>
                        <th>Action Delete</th>
                        <th>Action Edit</th>
                    </tr>
                </thead>
                <tbody>
                    <% @products.each do |product| %>
                        <tr>
                            <td><%= product.id%></td>
                            <td><%= product.name%></td>
                            <td><%= product.description%></td>
                            <td><%= product.categories.pluck(:name).to_sentence %></td>
                            <% if can? :destroy, product %>
                                <td><%= link_to 'Delete product', product_path(product), method: "delete", data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
                            <%else%>
                                <td>N/A</td>
                            <%end%>    
                            <% if can? :edit, product %>
                                <td><%= link_to 'Edit product', edit_product_path(product) , class: 'btn btn-info' %></td>
                            <%else%>
                                <td>N/A</td>
                            <%end%>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>    
</div>
