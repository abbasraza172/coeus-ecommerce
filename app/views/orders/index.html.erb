<div class="container" style="width: 100%; margin: auto;">
    <div class="card-header">
      <h1>Orders</h1>
    </div>
    

    <div class="col-md-12">

        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Order Id</th>
                        <th>Customer Id</th>
                        <th>Order Price</th>
                        <th>Status</th>
                        <th>Update Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% @orders.each do |order| %>
                        <tr>
                            <td><%= order.id%></td>
                            <td><%= order.user_id%></td>
                            <td><%= order.total_bill%></td>
                            <td><%= order.status %></td>
                            <% if !(order.status == "delivered") %>
                                <td><%= link_to 'Update status', edit_order_path(order) , class: 'btn btn-info' %></td>
                            <% else %>
                            <td>N/A</td>
                            <%end%>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>    
</div>
