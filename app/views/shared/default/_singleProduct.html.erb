<div class="span9">
  <div class="well well-small">
    <div class="row-fluid">
      <div class="span5">
        <div id="myCarousel" class="carousel slide cntr">
          <div class="carousel-inner">
            <div class="item active">
              <a href="#"> <%= image_tag "products/3.jpg", alt:""%></a>
            </div>
            <div class="item">
              <a href="#"> <%= image_tag "products/1.jpg", alt:""%></a>
            </div>
            <div class="item">
              <a href="#"> <%= image_tag "products/2.jpg", alt:""%></a>
            </div>
          </div>
          <a class="left carousel-control" href="#myCarousel" data-slide="prev">‹</a>
          <a class="right carousel-control" href="#myCarousel" data-slide="next">›</a>
        </div>
      </div>
      <div class="span7">
        <h2><%=product.name%></h2>
        <hr class="soft" />
        <form class="form-horizontal qtyFrm">
          <div class="control-group">
            <label class="control-label"><span><strong>Price:</strong></span></label>
            <div class="controls">
              <label class="control-label"><span>$ <%=product.current_price%></span></label>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label"><span><strong>Quantity:</strong></span></label>
            <div class="controls">
              <input type="number" min="1" max="<%=product.quantity%>" value="1"class="span6" placeholder="Qty.">
            </div>
          </div>
          <br>
          <h4><%=product.quantity%> items in stock</h4>
          <br>
          <button type="submit" class="shopBtn" onclick = "window.addToCart(<%= product.id%>,'<%= product.name%>', 1,<%= product.current_price%>, '')"><span class=" fa fa-shopping-cart"></span> Add
            to cart</button>
        </form>
      </div>
    </div>
    <hr class="softn clr" />
    <ul id="productDetail" class="nav nav-tabs">
      <li class="active"><a href="#detail" data-toggle="tab">Product Details</a></li>
      <li class=""><a href="#reviews" data-toggle="tab">Reviews </a></li>
      <li class=""><a href="#related-products" data-toggle="tab">Related Products </a></li>
    </ul>
    <div id="myTabContent" class="tab-content tabWrapper">
      <div class="tab-pane fade active in" id="detail">
        <h4>Product Description</h4>
        <p><%=product.description%></p>
      </div>
      <div class="tab-pane fade" id="reviews">
        <% if @feedbacks.empty? %>
          <div style="text-align:center;">No Review Found</div>
        <% else %>
          <% @feedbacks.each do |feedback| %>
            <div class="row-fluid">
              <div class="span12">
                <h5><%=feedback.user.name%> </h5>
                <% (1..5).each do |i| %>
                  <% if i<= feedback.stars%>
                    <span class="fa fa-star fa-lg checked"></span>
                  <%else%>
                    <span class="fa fa-star fa-lg"></span>
                  <%end%>
                <% end %>
                <br>
                <br>
                <p>
                  <%=feedback.review%>
                </p>
              </div>
            </div>
            <hr class="soft">
          <%end%>
        <%end%>
      </div>
      <div class="tab-pane fade" id="related-products">
        <% if @related_products.empty? %>
          <div style="text-align:center;">No Product Found</div>
        <%else%>
          <% @related_products.each_with_index do |related_product, index| %>
            <div class="row-fluid">
              <div class="span2">
                <%= image_tag "products/"+(index%6).to_s+".jpg", alt:""%>
              </div>
              <div class="span6">
                <h5><%=related_product.name%></h5>
                <p>
                  <%=related_product.description%>
                </p>
              </div>
              <div class="span4 alignR">
                <form class="form-horizontal qtyFrm">
                  <h3> $<%=related_product.current_price%></h3>
                  <div class="btn-group">
                    <a class="defaultBtn" onclick = "window.addToCart(<%= related_product.id%>,'<%= related_product.name%>', 1,<%= related_product.current_price%>, '' )"><span
													class=" fa fa-shopping-cart"></span> Add to cart</a>
                    <a href="<%= product_path(related_product)%>" class="shopBtn">VIEW</a>
                  </div>
                </form>
              </div>
            </div>
            <hr class="soft">
          <%end%>
        <%end%>
      </div>
    </div>
  </div>
</div>
