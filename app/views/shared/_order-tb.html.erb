<div class="col-md-8">

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Order Id</th>
                    <th>Customer name</th>
                    <th>Order Price</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>        
                <% @orders.each do |order| %>
                    <tr>
                        <td><%= order.id%></td>
                        <td><%= order.user.name%></td>
                        <td><%= order.total_bill%></td>
                        <td><%= order.status %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
